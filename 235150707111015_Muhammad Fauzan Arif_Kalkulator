    />
    <title>Muhammad Fauzan Arif_Kalkulator</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: sans-serif;
      }

      body {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f5f5f5;
      }

      .calculator {
        position: relative;
        max-width: 350px;
        width: 100%;
        border-radius: 8px;
        padding: 15px 25px;
        background: #fff;
        box-shadow: 0 3px 8px rgba(0, 0, 0, 0.2);
      }

      input {
        width: 100%;
        margin-bottom: 15px;
        text-align: right;
        padding: 15px;
        font-size: 36px;
        background: #eee;
      }

      .buttons {
        display: grid;
        grid-gap: 12px;
        grid-template-columns: repeat(4, 1fr);
      }

      button {
        padding: 12px;
        border-radius: 5px;
        border: none;
        font-size: 22px;
        cursor: pointer;
        background-color: #e0e0e0;
      }

      button.equals {
        grid-area: 2/4/6/5; /* Adjust grid area if needed */
        background-color: #999;
        color: white;
      }

      button:hover {
        background-color: #ddd;
        transform: scale(0.98);
      }
    </style>
  </head>
  <body>
    <div class="calculator">
      <input
        type="text"
        id="screen"
        readonly
      />
      <div class="buttons">
        <button onclick="calculate('*')">x</button>
        <button onclick="calculate('/')">รท</button>
        <button onclick="calculate('-')">-</button>
        <button onclick="calculate('+')">+</button>

        <button onclick="appendToScreen('7')">7</button>
        <button onclick="appendToScreen('8')">8</button>
        <button onclick="appendToScreen('9')">9</button>

        <button onclick="appendToScreen('4')">4</button>
        <button onclick="appendToScreen('5')">5</button>
        <button onclick="appendToScreen('6')">6</button>

        <button onclick="appendToScreen('1')">1</button>
        <button onclick="appendToScreen('2')">2</button>
        <button onclick="appendToScreen('3')">3</button>

        <button onclick="appendToScreen('0')">0</button>
        <button onclick="appendToScreen('.')">.</button>
        <button
          onclick="clearScreen()"
          style="background-color: #f00; color: white"
        >
          C
        </button>
        <button
          onclick="calculate('=')"
          class="equals"
        >
          =
        </button>
      </div>
    </div>

    <script>
      const screen = document.getElementById('screen');
      let firstOperand = '';
      let secondOperand = '';
      let operator = '';
      let result = '';

      function appendToScreen(value) {
        screen.value += value;
      }

      function clearScreen() {
        screen.value = '';
        firstOperand = '';
        secondOperand = '';
        operator = '';
        result = '';
      }

      function calculate(op) {
        if (op === '+' || op === '-' || op === '*' || op === '/') {
          firstOperand = parseFloat(screen.value);
          operator = op;
          screen.value = '';
        } else if (op === '=') {
          secondOperand = parseFloat(screen.value);

          if (operator === '+') {
            result = firstOperand + secondOperand;
          } else if (operator === '-') {
            result = firstOperand - secondOperand;
          } else if (operator === '*') {
            result = firstOperand * secondOperand;
          } else if (operator === '/') {
            if (secondOperand === 0) {
              alert('Cannot divide by zero');
              return;
            }
            result = firstOperand / secondOperand;
          }
          screen.value = result;
          firstOperand = result;
          secondOperand = null;
          operator = null;
        } else {
          screen.value += op;
        }
      }
    </script>
  </body>
</html>
